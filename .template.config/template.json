{
    "$schema": "http://json.schemastore.org/template",
    "author": "Wakanda",
    "classifications": [
      "API",
      "ASP.NET",
      "Insplatform Architecture"
    ],
    "name": "Insplatform Architecture MicroserviceApi",
    "description":  "Insplatform MicroserviceApi Template",
    "identity": "Insplatform.Architecture.MicroserviceApi.CSharp",
    "groupIdentity": "Insplatform.Architecture",
    "shortName": "ins-api-sln",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "symbols": {
      "Platform": {
        "type": "parameter",
        "description": "Insurance PLATFORM specific [Insplatform, Areegator, Areetech]",
        "isRequired": true,
        "dataType": "string",
        "replaces": "_NTLPLATFORM_"
      },
      "Domain": {
        "type": "parameter",
        "description": "Insurance DOMAIN specific following wiki domain-shortName",
        "isRequired": true,
        "datatype": "string",
        "replaces": "_NTLDOMAIN_"
      }
    },
    "sourceName": "_NTLCOMPONENT_",
    "preferNameDirectory": true,
    "sources": [
      {
        "source": "./",
        "target": "./",
        "exclude": [
          "**/[Bb]in/**",
          "**/[Oo]bj/**",
          ".template.config/**/*",
          ".vs/**/*",
          "**/*.filelist",
          "**/*.user",
          "**/*.lock.json",
          "**/.git/**",
          "*.nuspec",
          "nuget.config",
          "**/node_modules/**"
        ]
      }
    ]
  }